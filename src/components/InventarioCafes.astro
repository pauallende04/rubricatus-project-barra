---
import type { CafesInv} from "../types/types";
interface Props extends CafesInv {}

const {nombre,estado, precio} = Astro.props;
---

    <tr>
        <th>{nombre}</th>
        <th><button>{estado}</button></th>
        <th>{precio}</th>
    </tr>

    <style>

    
        th, td {
          border: 1px solid black;
          padding: 8px;
          text-align: left;
        }
    
        th {
          background-color: #f2f2f2;
          font-weight: bold;
        }
    
        tr:nth-child(even) {
          background-color: #f2f2f2;
        }

      </style>